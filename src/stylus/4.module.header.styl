//
// Global header
//


.gh
	gh-height()
	$horizontal-divider-bottom()
	display: flex
	container: nowrap
	justify-content: space-between
	background: $header-bg
	+below(920px)
		display: none

// Logo
.gh-logo
	gh-height()
	$horizontal-divider-bottom()
	background: linear-gradient(to right, $header-fade-bg, $header-bg)
	padding: 0 40*$px
	display: flex
	align-items: center
		
		
// Navigation
.gh-cta
	gh-height()
	display: flex
	align-items: center
	justify-content: flex-end
	max-width: 600*$px
	padding-right: 20*$px
	width: 100% 
	+below(920px)
		display: none

.gh-cta
		
	&__link
		button(red)
		font-size: 22*$px
		font-weight: 600


// Call to Action
.gh-hotline
	display: flex
	align-items: center
	padding: 0 20*$px
	min-width: 360*$px
	gh-height()
	background: $call-us-bg

	&__wrapper
		width: 330*$px
		text-align: center
		+below(410px)
			width: 290*$px
				
	&__header
		font-size: 1.46em
		color: white
		// margin: 0
		+above(420px)
			font-size: 1.6em
			
	&__phone
		font-size: 2.6em
		color: white
		// margin: 0
		color: black