// header height
gh-height($height = $gh-height)
	height: $height


v-align()
	position: relative
	top: 50%
	transform: translateY(-50%)
	
// button color
button($bt-color = hsl(210, 93%, 62%))
	color: lighten($bt-color, 95%)
	background: $bt-color
	border: 1px solid darken($bt-color, 10%)
	border-radius: 4px
	text-decoration: none
	white-space: nowrap
	padding: 10px
	margin: 4px
	&:hover
		background: darken($bt-color, 20%)

responsive-img()
	max-width: 100%
	height: auto
	border: 0