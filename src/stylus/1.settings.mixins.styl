// header height
gh-height($height = $gh-height)
	height: $height


v-align()
	position: relative
	top: 50%
	transform: translateY(-50%)
	

button()
	color: white
	background: hsl(210, 93%, 62%)
	border: 1px solid darken(hsl(210, 93%, 62%), 10%)
	border-radius: 4px
	text-decoration: none
	white-space:nowrap
	padding: 10px
	margin: 4px
	&:hover
		background: darken(hsl(210, 93%, 62%), 20%)