$vertical-space = 130*$px
$paragraph-space = 34*$px
$paragraph-size = 22*$px
$paragraph-lineheight = 34*$px

.copy
	&__head
		display: flex
		align-items: center
		margin-bottom: $paragraph-space
		+above(960px)
			width: 990px
			margin: 0px auto $paragraph-space auto


	&__logo
		width: 130*$px
		margin-right: 20*$px
		+above(980px)
			margin-right: 60*$px

	&__header
		font-size: 9vw
		+above(700px)
			font-size: 44*$px

	&__content
		max-width: 600px
		margin: auto
		display: block
		+between(768px, 768px)
			margin-left: 155px

	&__paragraph
		font-size: $paragraph-size
		line-height: $paragraph-lineheight
		margin-bottom: $paragraph-space

	// margins
	margin-bottom: $vertical-space
	&:first-of-type // top margine
		margin-top: ($vertical-space - 30%)

.social
	display: flex
	flex-direction: row
	align-items: center
	justify-content: space-between
	width: 280px
	margin-top: $vertical-space

.schedule-service
	display: block
	width: 250px
	font-size: 16*$px
	font-weight: 600
	padding: 22*$px
	border-radius: 4*$px
	background: red
	color: white
	margin: 40*$px auto
	text-align: center
	&:hover
		background: darken(red, 10%)


//
// Schedule Service Page
//

.schedule-info
	background-color: darken(hsl(180, 20%, 99%), 2%)
	margin: ($vertical-space) auto ($vertical-space - 60%) auto
	border-radius: 4*$px
	padding: 30*$px
	padding-top: 50*$px
	max-width: 900*$px
	+below(729px)
		margin: (0) auto ($vertical-space - 60%) auto
	&__paragraph
		font-size: $paragraph-size
		line-height: $paragraph-lineheight
		margin-bottom: ($paragraph-space - 30%)



.form
	max-width: 440*$px
	width: 100%
	margin: 0 auto $vertical-space auto
	z-index: 100
	&__group
		background-color: darken(hsl(180, 20%, 99%), 3%)
		border: 0
		border-radius: 4*$px
		padding: 20*$px
		margin-bottom: 60*$px

	&__group-name
		font-style: bold
		font-weight: 800 
		font-size: ($paragraph-size + 6*$px)
		
	&__label
		transform(translate(14px, -44px))
		font-size: $paragraph-size
		line-height: $paragraph-lineheight
		z-index: 100
		// margin-bottom: -20px
		
	&__input
		display: block
		border: 1*$px solid darken(hsl(180, 20%, 99%), 4%)
		border-radius: 4*$px
		max-width: 400*$px
		width: 100%
		margin: auto
		padding: 12*$px
		margin-top: 20*$px
		font-size: $paragraph-size
		line-height: $paragraph-lineheight

		&:focus + .form__label
			transform(translate(14px, -92px))
			font-size: $paragraph-size
			line-height: $paragraph-lineheight
			color: darken(#bbb, 20%)
			transition: all 0.3s
			
		&:valid + .form__label
			transform(translate(14px, -92px))
			font-size: $paragraph-size
			line-height: $paragraph-lineheight
			color: darken(#bbb, 20%)

	&__text-area
		border: 1*$px solid darken(hsl(180, 20%, 99%), 4%)
		font-size: $paragraph-size
		line-height: $paragraph-lineheight
		padding: 12*$px
		display: block
		max-width: 600*$px
		border-radius: 4*$px
		width: 100% 
		height: 300*$px

