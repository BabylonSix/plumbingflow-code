$vertical-space = 130*$px

+above(900px)
	.copy
		lost-center: 800*$px
		margin-bottom: $vertical-space
		&:first-of-type
			margin-top: $vertical-space - 20*$px

		&__logo
			lost-column: 1/3 0 100*$px
			
			img
				float: right
				padding-bottom: 30*$px
				padding-left: 20*$px

		&__content
			lost-column: 2/3 0 100*$px

		&__header
			font-size: calc((3vw + 3vh + 2vmin)/2)
			line-height: calc(((3vw + 3vh + 2vmin)/2)+8*$px)
			margin-bottom: 32*$px
		
		&__paragraph
			font-size: 22*$px
			line-height: 34*$px
			margin-bottom: 22*$px 

	.schedule-service
		font-size: 16*$px
		font-weight: 600 
		display: inline-block
		padding: 22*$px
		border-radius: 4*$px
		background: red
		color: white
		float: right
		margin-top: 40*$px
		margin-right: 40*$px
		&:hover
			background: darken(red, 10%)