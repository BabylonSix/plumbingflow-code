// Navigation
.menu-box
	hcol()
	background: hsl(196, 79%, 96%)
	+below(1020px)
		display: none
	+above(1020px)
		// column = 24 - (lost-column + cta-box) / 24
		lost-column: (24 - ( 6 + 8 ))/24 0 0


.main-nav, .footer-nav
	height: 100%
	.button
		padding-left: 30px
		line-height: ($hcol / 2)
		display: inline
		white-space: nowrap
		+above(737px)
			line-height: $hcol
	a
		text-decoration: none
		color: hsl(210, 93%, 62%)
		font-size: 18px
		&:hover
			color: darken(hsl(210, 100%, 44%), 10%)

.main-nav
	font-weight: 800
	+above(1160px)
		a
			font-size: 22px
			font-weight: 600

.footer-nav
	+above(850px)
		text-align: right
		padding-right: 30px
		a
			font-weight: 400
			&:after
				font-weight: 100
				content: '\00a0\00a0\00a0\00a0\00a0\00a0\00a0\00a0\00a0|'
			&:last-of-type:after
				content: ''