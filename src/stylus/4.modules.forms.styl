.form
	max-width: 440*$px
	width: 100%
	margin: 0 auto $vertical-space auto
	z-index: 100
	&__group
		background-color: darken(hsl(180, 20%, 99%), 3%)
		border: 0
		border-radius: 4*$px
		padding: 20*$px
		margin-bottom: 60*$px

	&__group-name
		font-style: bold
		font-weight: 800 
		font-size: ($paragraph-size + 6*$px)
		
	&__label
		transform(translate(14px, -44px))
		font-size: $paragraph-size
		line-height: $paragraph-lineheight
		z-index: 100
		// margin-bottom: -20px
		
	&__input
		display: block
		border: 1*$px solid darken(hsl(180, 20%, 99%), 4%)
		border-radius: 4*$px
		max-width: 400*$px
		width: 100%
		margin: auto
		padding: 12*$px
		margin-top: 20*$px
		font-size: $paragraph-size
		line-height: $paragraph-lineheight

		&:focus + .form__label
			transform(translate(14px, -92px))
			font-size: $paragraph-size
			line-height: $paragraph-lineheight
			color: darken(#bbb, 20%)
			transition: all 0.3s
			
		&:valid + .form__label
			transform(translate(14px, -92px))
			font-size: $paragraph-size
			line-height: $paragraph-lineheight
			color: darken(#bbb, 20%)

	&__text-area
		border: 1*$px solid darken(hsl(180, 20%, 99%), 4%)
		font-size: $paragraph-size
		line-height: $paragraph-lineheight
		padding: 12*$px
		display: block
		max-width: 600*$px
		border-radius: 4*$px
		width: 100% 
		height: 300*$px
