.hero // Contains the hero nav sections
	width: 100%
	height: 100%
	min-height: 600px
	display: flex
	flex-direction: row
	justify-content: space-around
	align-items: center
	flex-wrap: wrap
	background: $hero-nav-section-bg
	margin-bottom: $vertical-space-iphone
	$horizontal-divider-bottom()
	
	+between(800px, 820px)
		justify-content: space-between 
	+between(372px, 420px)
		justify-content: space-between
			
	// How the hero section looks at different sizes
	$hero-section()
		border-radius: 8*$px
		width: 230px
		height: 500px
		+between(800px, 920px)
			border-radius: 8*$px
			width: 200px
		+between(600px, 800px)
			border-radius: 0
			width: 270px
		+between(414px, 600px)
			border-radius: 0
			width: 200px
		+between(360px, 414px)
			border-radius: 0
			width: 186px
		+below(360px)
			width: 250px
			border-radius: 8*$px

	&__section // A hero nav section, eg: plumbing, sewer & drain, etc
		$hero-section()
		position: relative

		// Display .hero__nav on hover instead of default .hero__info
		&:hover > .hero__nav
			display: flex
			flex-flow: column
			align-items: center
			background: $hero-nav-bg

	&__info // Container that's shown by default
		$hero-section()
		background: $hero-info-bg
		position: absolute
		top: 0
		z-index: 100
		display: flex
		flex-flow: column
		align-items: center

	&__logo // info containers logo
		margin-top 30px
		border 1px solid $hero-nav-logo-border
		border-radius: 14px 

	&__header // info containers header
		color: $hero-info-text
		font-size: 30px
		font-weight: 400
		margin-top 30px
		user-select: none
		// iPhone 4, 4c, 4s
		+below(320px)
			font-size: 36px
			margin-top 20px
			
		
		// special rule
		// when container width is 200px, make margin smaller
		+between(800px, 920px)
			margin-top 20px
		+below(600px)
			margin-top 20px
		// end special rule


	&__paragraph // info containers paragraph
		color: $hero-info-text
		font-size: 16px
		line-height: 30px
		margin: 15px 30px
		user-select: none
		// iPhone 4, 4c, 4s
		+below(320px)
			font-size: 18px
			line-height: 30px
			margin-top 20px
			
		
		//special rule
		// when container width is 200px, make margin smaller
		+between(800px, 920px)
			margin: 10px 20px
		+below(600px)
			margin: 10px 20px
		// end special rule
			

	&__nav // Container that's shown when hero section is hovered over
		$hero-section()
		display: none
		position: absolute
		top: 0
		z-index: 200

	&__link // links to more in depth parts of the section
		button($hero-nav-button)
		text-align: center
		font-size: 20px
		font-weight: 400
		width: 180px
		hight: 30px
		color: white
		+below(920px)
			font-size: 18px
		+below(600px)
			font-weight: 300

		$vertical-gutter = 30px // control the vertical gutter
		margin-bottom: $vertical-gutter
		&:first-of-type
			margin-top: $vertical-gutter