$space-between-forms = 60*$px
	
.form
	max-width: 440*$px
	width: 100%
	margin: auto
	z-index: 100
	
	&__group
		background-color: darken($form-group, 3%)
		border: 0
		border-radius: 4*$px
		padding: 6*$px
		margin-bottom: $space-between-forms

	&__group-name
		font-style: bold
		font-weight: 800 
		font-size: ($paragraph-size + 6*$px)
		margin-left: 10*$px
		margin-bottom: 20*$px
		+below(430px)
			margin-left: 6*$px

	&__label
		transform: translate(26*$px, -38*$px)
		font-size: $paragraph-size
		line-height: $paragraph-lineheight
		max-width: 70% 
		z-index: 100
		+below(430px)
			transform: translate(12*$px, -38*$px)
		 
	&__input
		appearance: none
		display: block
		border: 1*$px solid darken(silver, 4%)
		border-radius: 4*$px
		max-width: 400*$px
		width: 100%
		margin: auto
		padding: 12*$px
		margin-top: 20*$px
		font-size: $paragraph-size
		line-height: $paragraph-lineheight

		// mixin changes location of form text on hover
		form-hover()
			transform: translate(18*$px, -80*$px)
			color: darken(silver, 50%)
			font-size: $paragraph-size
			line-height: $paragraph-lineheight
			+below(420px)
				transform: translate(10*$px, -80*$px)

		&:focus + .form__label
			form-hover()
			transition: all 0.3s
			
		&:valid + .form__label
			form-hover()


	&__text-area
		border: 1*$px solid darken(silver, 4%)
		font-size: $paragraph-size
		line-height: $paragraph-lineheight
		padding: 12*$px
		display: block
		max-width: 600*$px
		border-radius: 4*$px
		width: 100% 
		height: 300*$px
		appearance: none
		&::placeholder
			color: $text-color
			transition: all 0.5s
		&:hover
		&:focus
			&::placeholder
				color: clear
			
	
	&__submit
		display: block
		border: 1*$px solid darken($vibrant-blue, 4%)
		border-radius: 4*$px
		max-width: 300*$px
		width: 100%
		margin: auto
		padding: 12*$px
		margin-top: 20*$px
		font-size: $paragraph-size
		line-height: $paragraph-lineheight
		appearance: none
		background: $vibrant-blue
		color: white
		font-weight: 800
		margin-bottom: $space-between-forms
		&:hover
			background: lighten($vibrant-blue, 10%)
