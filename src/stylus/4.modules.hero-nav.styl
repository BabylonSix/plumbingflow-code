
.hero // Contains the hero nav sections
	width: 100%
	min-height: 600px
	display: flex
	justify-content: space-around
	align-items: center
	flex-wrap: wrap
	background: hsla(0, 0%, 97%, 1)
	$horizontal-divider()

	// How the hero section looks at different sizes
	$hero-section()
		border-radius: 8*$px
		height: 490px
		width: 230px
		+between(800px, 920px)
			border-radius: 0
			width: 200px
		+between(600px, 800px)
			border-radius: 0
			width: 270px
		+below(600px)
			border-radius: 0
			width: 200px

	&__section // A hero nav section, eg: plumbing, sewer & drain, etc
		$hero-section()
		position: relative

		&:hover > .hero__nav // Display .hero__nav on hover instead of default .hero__info
			display: flex
			flex-flow: column
			align-items: center
			background: hsla(0, 0%, 24%, 90%)

	&__info // Container that's shown by default
		$hero-section()
		background: hsla(0, 0%, 97%, 1)
		position: absolute
		top: 0
		z-index: 100
		display: flex
		flex-flow: column
		align-items: center

	&__logo // info containers logo
		margin-top 30px

	&__header // info containers header
		font-size: 30px
		font-weight: 400
		margin-top 30px

	&__paragraph // info containers paragraph
		font-size: 16px
		line-height: 30px
		margin: 15px 30px

	&__nav // Container that's shown when hero section is hovered over
		$hero-section()
		display: none
		position: absolute
		top: 0
		z-index: 200

	&__link // links to more in depth parts of the section
		button(hsla(210, 100%, 44%, 1))
		text-align: center
		font-size: 20px
		font-weight: 400
		width: 180px
		hight: 30px
		color: white
		+below(920px)
			font-size: 18px
		+below(600px)
			font-weight: 300

		$vertical-gutter = 30px // control the vertical gutter
		margin-bottom: $vertical-gutter
		&:first-of-type
			margin-top: $vertical-gutter