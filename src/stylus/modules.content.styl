
// Content Rows & Columns
.row > .col
	+above(680px)
		lost-column: 1/3 0 0
	// temporary column colors
	&:nth-of-type(1)
		background: lighten( $black, 20% )
	&:nth-of-type(2)
		background: lighten( $black, 25% )
	&:nth-of-type(3)
		background: lighten( $black, 30% )


.col
	min-height: $col-height
	// temorary line-height
	line-height: $col-height
	text-align: center