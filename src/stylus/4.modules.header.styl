//
// Global header
//

// Logo
.gh-logo
	gh-height()
	background: linear-gradient(left, $logo-fade-color, $logo-bg-color)
	lost-align: center
	+above(1020px)
		lost-column: 6/24 0 0
	&__logo
		height: 99px
		width: 267px
		
		
// Navigation
.gh-menu
		gh-height()
		background: hsl(196, 79%, 96%)
		+below(1020px)
			display: none
		+above(1020px)
			// column = 24 - (lost-column + cta-box) / 24
			lost-column: (24 - ( 6 + 8 ))/24 0 0

.gh-nav
	height: 100%
	font-weight: 800
	list-style-type: none
	&__link
		text-decoration: none
		color: hsl(210, 93%, 62%)
		font-size: 18px
		&:hover
			color: darken(hsl(210, 100%, 44%), 10%)
		+above(1160px)
				font-size: 22px
				font-weight: 600
	&__item
		display: inline


// Call to Action
.gh-cta
	gh-height()
	background: hsl(206, 86%, 62%)
	lost-align: middle-center
	position: relative
	+above(1020px)
		lost-column 8/24 0 0
	
	&__droplets
		size: 7px 37px
		position: absolute
		left: -9px

	&__message
		width: 330px
		text-align: center
		+below(410px)
			width: 290px
				
	&__call
		font-size: 1.46em
		color: white
		margin: 0
		+above(420px)
			font-size: 1.6em
			
	&__phone
		font-size: 2.6em
		color: white
		margin: 0
		color: hsl(0, 0%, 20%)
		+above(420px)
			font-size: 3em

// iPad sized = two column header
+between(730px, 1020px)
	.gh-logo,	.gh-cta
		lost-column: 1/2 0 0