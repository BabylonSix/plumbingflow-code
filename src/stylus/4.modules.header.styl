//
// Global header
//


.gh
	gh-height()
	$horizontal-divider-bottom()
	display: flex
	container: nowrap
	justify-content: space-between
	background: hsl(196, 79%, 96%)
	+below(920px)
		display: none

// Logo
.gh-logo
	gh-height()
	$horizontal-divider-bottom()
	background: linear-gradient(to right, $logo-fade-color, $logo-bg-color)
	padding: 0 40*$px
	display: flex
	align-items: center
		
		
// Navigation
.gh-menu
	gh-height()
	display: flex
	align-items: center
	justify-content: flex-end
	max-width: 600px
	padding-right: 20*$px
	width: 100% 
	+below(920px)
		display: none

.gh-nav
		
	&__link
		button(red)
		font-size: 22px
		font-weight: 600


// Call to Action
.gh-cta
	display: flex
	align-items: center
	padding: 0 20*$px
	min-width: 360px
	gh-height()
	background: blue

	&__message
		width: 330px
		text-align: center
		+below(410px)
			width: 290px
				
	&__call
		font-size: 1.46em
		color: white
		// margin: 0
		+above(420px)
			font-size: 1.6em
			
	&__phone
		font-size: 2.6em
		color: white
		// margin: 0
		color: black
		+above(420px)
			font-size: 3em